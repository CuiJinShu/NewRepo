<Window x:Class="PartnerRequests.MaterialCalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет материалов" Height="400" Width="600"
        WindowStartupLocation="CenterOwner" Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BBDCFA" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Border Width="40" Height="40" Background="#0C4882" Margin="0,0,15,0" CornerRadius="4">
                    <TextBlock Text="📊" FontSize="18" Foreground="White"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="Расчет материалов для заявки"
                           FontFamily="Comic Sans MS"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <TextBlock x:Name="CalculationResultText" 
                       TextWrapping="Wrap" 
                       FontFamily="Consolas"
                       FontSize="12"
                       TextAlignment="Left"/>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Закрыть" Click="CloseButton_Click" 
                        Width="100" Height="30"
                        Background="#0C4882" Foreground="White"
                        FontFamily="Comic Sans MS" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>