<Window x:Class="PartnerRequests.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог продукции" Height="500" Width="900"
        WindowStartupLocation="CenterOwner" Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BBDCFA" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Border Width="50" Height="50" Background="#0C4882" Margin="0,0,15,0" CornerRadius="4">
                    <TextBlock Text="📦" FontSize="24" Foreground="White"
                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock x:Name="TitleTextBlock" Text="Каталог продукции"
                         FontFamily="Comic Sans MS"
                         FontSize="20"
                         FontWeight="Bold"
                         Foreground="Black"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="15">
            <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                     HeadersVisibility="Column" BorderThickness="1" BorderBrush="#DDDDDD"
                     FontFamily="Comic Sans MS" FontSize="12">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Тип продукции" Binding="{Binding ProductType}" Width="150"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="100"/>
                    <DataGridTextColumn Header="Мин. цена" Binding="{Binding MinPartnerPrice, StringFormat={}{0:N2} р}" Width="120"/>
                    <DataGridTextColumn Header="ID типа" Binding="{Binding ProductTypeId}" Width="80"/>
                    <DataGridTextColumn Header="Коэффициент" Binding="{Binding ProductTypeCoefficient}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Справка по материалам" Click="MaterialsInfoButton_Click" Width="150" Height="35"
                       Background="#0C4882" Foreground="White" FontFamily="Comic Sans MS"
                       FontSize="12" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,10,0"/>
                <Button Content="Закрыть" Click="CloseButton_Click" Width="100" Height="35"
                       Background="#0C4882" Foreground="White" FontFamily="Comic Sans MS"
                       FontSize="12" FontWeight="SemiBold" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>