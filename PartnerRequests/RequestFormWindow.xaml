<Window x:Class="PartnerRequests.RequestFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="650" Width="800"
        WindowStartupLocation="CenterOwner" Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BBDCFA" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Border Width="50" Height="50" Background="#0C4882" Margin="0,0,15,0" CornerRadius="4">
                    <TextBlock Text="📋" FontSize="24" Foreground="White"
                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="{Binding WindowTitle}"
                         FontFamily="Comic Sans MS"
                         FontSize="20"
                         FontWeight="Bold"
                         Foreground="Black"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
            <StackPanel Margin="20">
                <TextBlock Text="Информация о партнере:" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#546F94"/>

                <Border Background="#F8F8F8" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Тип партнера:*" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <ComboBox x:Name="PartnerComboBox" ItemsSource="{Binding Partners}" DisplayMemberPath="CompanyName"
                                    SelectedValuePath="Id" SelectedValue="{Binding SelectedPartnerId}" Margin="0,2,0,10" Padding="8" FontSize="12"
                                    Background="White" BorderBrush="#CCCCCC" SelectionChanged="PartnerComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Наименование компании:*" Margin="0,5,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="CompanyNameTextBox" Text="{Binding CompanyName}" IsEnabled="False"
                                   Margin="0,2,0,10" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="ФИО директора:*" Margin="0,5,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="DirectorTextBox" Text="{Binding DirectorName}" IsEnabled="False"
                                   Margin="0,2,0,10" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="Адрес:*" Margin="0,5,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="AddressTextBox" Text="{Binding Address}" IsEnabled="False"
                                   Margin="0,2,0,0" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC" Height="60" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Рейтинг:*" Margin="0,0,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="RatingTextBox" Text="{Binding Rating}" IsEnabled="False"
                                   Margin="0,2,0,10" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Телефон:*" Margin="0,5,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="PhoneTextBox" Text="{Binding Phone}" IsEnabled="False"
                                   Margin="0,2,0,10" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="Email:*" Margin="0,5,0,5" FontWeight="SemiBold"/>
                            <TextBox x:Name="EmailTextBox" Text="{Binding Email}" IsEnabled="False"
                                   Margin="0,2,0,10" Padding="8" FontSize="12" Background="#F5F5F5" BorderBrush="#CCCCCC"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Text="Продукция в заявке:" FontSize="16" FontWeight="Bold" Margin="0,10,0,15" Foreground="#546F94"/>

                <Border Background="#F8F8F8" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox x:Name="ProductComboBox" ItemsSource="{Binding AllProducts}" DisplayMemberPath="ProductName"
                                    SelectedValuePath="Id" Width="300" Margin="0,0,10,0" Padding="8" FontSize="12"
                                    Background="White" BorderBrush="#CCCCCC"/>
                            <TextBox x:Name="QuantityTextBox" Text="1" Width="80" Margin="0,0,10,0" Padding="8" FontSize="12"
                                   Background="White" BorderBrush="#CCCCCC" ToolTip="Количество"/>
                            <Button Content="Добавить" Click="AddProductButton_Click" Width="80" Height="30" 
                                  Background="#0C4882" Foreground="White" FontSize="12"/>
                        </StackPanel>

                        <DataGrid x:Name="ProductsDataGrid" ItemsSource="{Binding Products}" AutoGenerateColumns="False"
                                IsReadOnly="True" HeadersVisibility="Column" BorderThickness="1" BorderBrush="#DDDDDD"
                                FontSize="12" MaxHeight="200" Margin="0,10,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукция" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Тип" Binding="{Binding ProductType}" Width="120"/>
                                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="100"/>
                                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat={}{0:N2} р}" Width="100"/>
                                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalPrice, StringFormat={}{0:N2} р}" Width="120"/>
                                <DataGridTemplateColumn Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Удалить" Click="RemoveProductButton_Click" 
                                                  Background="#FF4444" Foreground="White" FontSize="10" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Border Background="#E8F4FD" BorderBrush="#0C4882" BorderThickness="1" CornerRadius="4" 
                              Padding="10" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Общая стоимость заявки:" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding TotalCost, StringFormat={}{0:N2} р}" FontWeight="Bold" FontSize="14" Foreground="#0C4882"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border x:Name="ErrorBorder" Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" 
                      CornerRadius="4" Margin="0,15,0,0" Padding="15" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Ошибка ввода:" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" Foreground="#C62828"/>
                        <TextBlock x:Name="ErrorTextBlock" TextWrapping="Wrap" FontSize="12" TextAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#F0F0F0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="120" Height="35" Margin="0,0,10,0"
                      Background="#0C4882" Foreground="White" FontFamily="Comic Sans MS" FontSize="12" FontWeight="SemiBold" Cursor="Hand"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="100" Height="35"
                      Background="LightGray" Foreground="Black" FontFamily="Comic Sans MS" FontSize="12" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>